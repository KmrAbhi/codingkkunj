<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mydost.HealthCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/womansanitation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="140dp"
            android:background="@drawable/homepagebuttonshape"
            android:text="WomanSanitation" />

        <Button
            android:id="@+id/pregnancy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="140dp"
            android:background="@drawable/homepagebuttonshape"
            android:text="Pregnancy" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/gynachologist"
            android:layout_marginHorizontal="140dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/homepagebuttonshape"
            android:text="Gynachaologist"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/generalhealth"
            android:layout_marginHorizontal="140dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/homepagebuttonshape"
            android:text="GeneralHealth"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
