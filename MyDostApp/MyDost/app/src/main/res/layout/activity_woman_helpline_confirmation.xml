<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mydost.WomanHelplineConfirmation"
    android:background="@drawable/sun">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"/>
            <EditText
                android:textColorHint="#FFFFFF"
                android:layout_width="300dp"
                android:textSize="35dp"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:id="@+id/womanname"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Problem"/>
            <EditText
                android:textColorHint="#FFFFFF"
                android:layout_width="300dp"
                android:textSize="35dp"
                android:layout_height="wrap_content"
                android:hint="Your Problem"
                android:id="@+id/womanproblem"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"/>
            <EditText
                android:textColorHint="#FFFFFF"
                android:layout_width="300dp"
                android:textSize="35dp"
                android:layout_height="wrap_content"
                android:hint="Your Problem"
                android:id="@+id/womanmobile"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/homepagebuttonshape"
            android:textStyle="bold"
            android:text="Submit"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
