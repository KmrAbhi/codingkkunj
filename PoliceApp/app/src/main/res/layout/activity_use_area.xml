<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.police.UseArea"
    android:background="#000000">



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textSize="60dp"
            android:textColor="#DDCFD0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpdestination"
            android:textColor="#DDCFD0"
            android:textSize="20dp"/>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude"
                android:background="@drawable/buttondrwable" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/userarealatitude"
                android:textColor="#DDCFD0"
                android:textColorHint="#DDCFD0"
                android:background="@drawable/texteditdrwable"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude"
                android:background="@drawable/buttondrwable"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:id="@+id/userarealongitude"
                android:textColor="#DDCFD0"
                android:textColorHint="#DDCFD0"
                android:background="@drawable/texteditdrwable"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>