<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context="com.example.hp.police.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/flag6"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">




        <EditText
            android:id="@+id/stationname"
            android:textColorHint="#DDCFD0"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:hint="station name"
            android:background="@drawable/texteditdrwable"
            android:textColor="#DDCFD0"/>


        <EditText
            android:id="@+id/stationcode"
            android:textColorHint="#DDCFD0"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:hint="station code"
            android:layout_marginTop="15dp"
            android:background="@drawable/texteditdrwable"
            android:textColor="#DDCFD0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/login"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttondrwable"
                    android:text="login" />

                <Button
                    android:id="@+id/loginregister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/buttondrwable"
                    android:text="Register" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Latitude" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Longitude" />

    </LinearLayout>
    </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
